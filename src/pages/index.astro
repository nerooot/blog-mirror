---
import { getCollection } from "astro:content";
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import ArrowCard from "@components/ArrowCard.astro";
import Link from "@components/Link.astro";
import { SITE, HOME, SOCIALS } from "@consts";

const blog = (await getCollection("blog"))
    .filter((post) => !post.data.draft)
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
    .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE);

const projects = (await getCollection("projects"))
    .filter((project) => !project.data.draft)
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
    .slice(0, SITE.NUM_PROJECTS_ON_HOMEPAGE);
---

<PageLayout title={HOME.TITLE} description={HOME.DESCRIPTION}>
    <Container>
        <h4 class="animate font-semibold text-black dark:text-white">
            hola, soy neroot
        </h4>
        <div class="space-y-16">
            <section>
                <article class="space-y-4">
                    <p class="animate">
                        me gustan los gatos y linux. normalmente paso mi tiempo
                        personalizando mi escritorio o aprendiendo cosas nuevas.
                        actualmente estoy aprendiendo python y tecnologias web
                        como HTML, CSS y JS.
                    </p>

                    <p class="animate">
                        sitio web hecho con astro.js y la plantilla de <Link
                            href="https://github.com/markhorn-dev/astro-nano"
                            aria-label="Astro Nano GitHub">Astro Nano</Link
                        >
                    </p>
                </article>
            </section>

            <section class="animate space-y-6">
                <div
                    class="flex flex-wrap gap-y-2 items-center justify-between"
                >
                    <h5 class="font-semibold text-black dark:text-white">
                        ultimos posts
                    </h5>
                    <Link href="/blog"> ver todos los posts </Link>
                </div>
                <ul class="flex flex-col gap-4">
                    {
                        blog.map((post) => (
                            <li>
                                <ArrowCard entry={post} />
                            </li>
                        ))
                    }
                </ul>
            </section>

            <section class="animate space-y-6">
                <div
                    class="flex flex-wrap gap-y-2 items-center justify-between"
                >
                    <h5 class="font-semibold text-black dark:text-white">
                        proyectos recientes
                    </h5>
                    <Link href="/projects"> See all projects </Link>
                </div>
                <ul class="flex flex-col gap-4">
                    {
                        projects.map((project) => (
                            <li>
                                <ArrowCard entry={project} />
                            </li>
                        ))
                    }
                </ul>
            </section>

            <section class="animate space-y-4">
                <h5 class="font-semibold text-black dark:text-white">
                    contacto
                </h5>
                <article>
                    <p>
                        no suelo recibir mensajes pero si quieres mandarme un
                        saludo o algo, puedes hacerlo.
                    </p>
                </article>
                <ul class="flex flex-wrap gap-2">
                    {
                        SOCIALS.map((SOCIAL) => (
                            <li class="flex gap-x-2 text-nowrap">
                                <Link
                                    href={SOCIAL.HREF}
                                    external={true}
                                    aria-label={`${SITE.NAME} on ${SOCIAL.NAME}`}
                                >
                                    {SOCIAL.NAME}
                                </Link>
                                {"/"}
                            </li>
                        ))
                    }
                    <li class="line-clamp-1">
                        <Link
                            href={`mailto:${SITE.EMAIL}`}
                            aria-label={`Email ${SITE.NAME}`}
                        >
                            {SITE.EMAIL}
                        </Link>
                    </li>
                </ul>
            </section>
        </div>
    </Container>
</PageLayout>
